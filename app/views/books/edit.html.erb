<div class="edit">
 <h2><strong>Editing Book</strong></h2>

  <%= form_with model: @book,url:"/books/#{@book.id}",local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Update' %>
  <% end %>
  <div>
   <p><%= link_to "show",book_path(@book) %></p>
   <p>|</p>
   <p><a href="/books">back</a></p>
  </div>

</div>