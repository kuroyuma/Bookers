            <!--<td><a class="edit_19659" href="/books/19659/edit">Edit</a></td>-->
            <td><%= link_to "edit", edit_book_path(book.id) %></td>
            <!--<td><a data-confirm="Are you sure?" class="destroy_19659" rel="nofollow" data-method="delete" href="/books/19659">Destroy</a></td>-->
            <td><%= link_to "delete", book_path(book.id), method: :delete %></td>

          </tr>
　　　　　<% end %>

        </tbody>
