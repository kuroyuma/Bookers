          <!--</tr>-->

        <!--</tbody>-->




    </table>

    <div class="new">
        <h2>New book</h2>

          <%= form_with model: @book,url:'/books',local:true do |f| %>
           <h4>Title</h4>
            <%= f.text_field :title %>
           <h4>本文</h4>
            <%= f.text_area :body %>
            <%= f.submit 'Create Book' %>
          <% end %>
    </div>

